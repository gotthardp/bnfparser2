prefix = @prefix@
exec_prefix = @exec_prefix@
sysconfdir = @sysconfdir@
bindir = @bindir@
libdir = @libdir@
includedir = @includedir@

CC = @CC@
CXX = @CXX@
DEFS = @DEFS@
CPPFLAGS = -ansi -Wall @CPPFLAGS@
LIBS = @LIBS@

TARGET = libBnfParser2.so.0
TARGET_OBJS = LalrTable.o GSS.o Parser.o AnyBnfLoad.o AnyBnfConf.o AnyBnfFile.o BnfParser2.o

TEST = ../bnfcheck
TEST_OBJS = bnfcheck.o

DEPENDENCY_FILES = *.cpp

all: $(TARGET) $(TEST)

$(TARGET): .depend $(TARGET_OBJS)
	@echo "  LD $(@F)"; \
	$(CXX) -shared -Wl,-soname,$(TARGET) $(TARGET_OBJS) -o $@; \
	ln -sf $@ libBnfParser2.so

$(TEST): $(TARGET) $(TEST_OBJS)
	@echo "  LD $(@F)"; \
	$(CXX) $(LDFLAGS) -L. $(TEST_OBJS) $(LIBS) -lBnfParser2 -o $@;

%.o: %.cpp
	@echo "  CXX $<"; \
	$(CXX) -c $(CPPFLAGS) $(DEFS) $< -o $@

clean:
	-rm -rf .depend $(TARGET_OBJS) $(TARGET) libBnfParser2.so $(TEST_OBJS) $(TEST)

distclean: clean
	-rm -rf Makefile config.h

rebuild: clean all


INSTALL_HEADERS = BnfParser2.h

install:
	mkdir -p $(includedir)
	cp -pf $(INSTALL_HEADERS) $(includedir)
	mkdir -p $(libdir)
	cp -pf $(TARGET) $(libdir)
	ln -sf $(TARGET) $(libdir)/libBnfParser2.so
	mkdir -p $(bindir)
	cp -pf $(TEST) $(bindir)


.depend dep: $(DEPENDENCY_FILES)
	@echo "  DEP $(DEPENDENCY_FILES)"; \
	$(CXX) -c -MM $(CPPFLAGS) $(DEFS) $(DEPENDENCY_FILES) | grep -v '^#' | grep -v '^$$' > .depend

ifeq (.depend,$(wildcard .depend))
include .depend
endif 
